<catel:UserControl x:Class="NUnitBenchmarker.Views.ResultsPlotView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:wpf="http://oxyplot.org/wpf">

    <wpf:PlotView Model="{Binding PlotModel}" Margin="10">
        <wpf:PlotView.ContextMenu>
            <ContextMenu>
                <MenuItem Header="_Logarithmic Time axis" IsCheckable="True" IsChecked="{Binding IsLogarithmicTimeAxisChecked}" Command="{Binding IsLogarithmicTimeAxisCommand}"/>
            </ContextMenu>
        </wpf:PlotView.ContextMenu>
    </wpf:PlotView>

</catel:UserControl>
