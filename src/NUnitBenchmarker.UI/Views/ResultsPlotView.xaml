<catel:UserControl x:Class="NUnitBenchmarker.Views.ResultsPlotView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:oxy="http://oxyplot.codeplex.com">

    <oxy:Plot Model="{Binding PlotModel}" Margin="10">
        <oxy:Plot.ContextMenu>
            <ContextMenu>
                <MenuItem Header="_Logarithmic Time axis" IsCheckable="True" IsChecked="{Binding IsLogarithmicTimeAxisChecked}"/>
            </ContextMenu>
        </oxy:Plot.ContextMenu>
    </oxy:Plot>

</catel:UserControl>
