<catel:UserControl x:Class="NUnitBenchmarker.UI.Views.ResultsView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:catel="http://catel.codeplex.com"
				   xmlns:views="clr-namespace:NUnitBenchmarker.UI.Views">

    <catel:StackGrid>

        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </catel:StackGrid.RowDefinitions>

        <views:ResultsPlotView DataContext="{Binding BenchmarkResult}" />
        <views:ResultsDataView DataContext="{Binding BenchmarkResult}" />

    </catel:StackGrid>
</catel:UserControl>
